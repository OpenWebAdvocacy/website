
{% set content = languages_base[page.lang] %}

{% block aside %}
  <aside>
    {% if permalink != '/blog/' %}
      <div class="blog">
        <h2>{{ content.asideHeading }}</h2>
        {% include "partials/post-list.njk" %}
        <p><a href="{{ '/blog' | locale_url }}" class="action-button">{{ content.asideLinkText }}</a></p>
      </div>
    {% endif %}
    {% include "partials/promo.njk" %}
    {% include "partials/press-coverage.njk" %}
    {% if permalink == '/blog/' %}
      {% include "partials/rss-feed.njk" %}
    {% endif %}
  </aside>
{% endblock %}

